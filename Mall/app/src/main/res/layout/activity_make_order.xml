<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAppBg">

    <include layout="@layout/layout_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/choose_address"
                android:background="@color/colorWhite">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorProduct"
                    android:id="@+id/name_tel"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@id/name_tel"
                    android:layout_marginTop="5dp"
                    android:id="@+id/location_iv"
                    android:background="@mipmap/location"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorLocationText"
                    android:layout_below="@id/name_tel"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"
                    android:id="@+id/location_tv"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@mipmap/divider"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/location_tv"/>

            </RelativeLayout>

            <com.guotai.mall.widget.ProductView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:id="@+id/productView"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorWhite"
                android:layout_marginBottom="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorProduct"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:text="金额总计"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPriceText"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:gravity="right"
                    android:id="@+id/total_price"
                    android:text="¥787.00"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorProduct"
                    android:textSize="16sp"
                    android:text="开具发票"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    style="@style/CustomCheckBoxTheme"
                    android:id="@+id/invoice"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorWhite"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorProduct"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:text="发票抬头"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="请填写发票抬头"
                    android:textSize="14sp"
                    android:id="@+id/invoice_head"
                    android:background="@null"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorWhite"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorProduct"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:text="备注信息"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="请填写备注信息"
                    android:id="@+id/remark"
                    android:textSize="14sp"
                    android:background="@null"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAppBg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:background="@color/colorWhite">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实付:"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorProduct"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="¥1920.00"
            android:id="@+id/true_pay"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorPriceText"
            android:gravity="left"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/common_button"
            android:id="@+id/make_order_btn"
            android:textColor="@color/colorWhite"
            android:text="立即下单"/>

    </LinearLayout>

</LinearLayout>