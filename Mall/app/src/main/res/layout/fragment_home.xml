<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.guotai.mall.widget.VpSwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/refresh">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAppBg"
            android:divider="@null"
            android:id="@+id/home_lv"/>

    </com.guotai.mall.widget.VpSwipeRefreshLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/colorBlack"
        android:id="@+id/home_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="18dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/head_ll"
        android:background="@android:color/transparent">

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:id="@+id/scan"
            android:background="@mipmap/scan"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:background="@drawable/search_btn"
            style="@style/ButtonSearchStyle"
            android:drawableLeft="@mipmap/search"
            android:gravity="left|center_vertical"
            android:paddingLeft="5dp"
            android:drawablePadding="8dp"
            android:id="@+id/search_btn"
            android:textColor="@color/colorSearchText"
            android:text="搜索"/>

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/message_btn"
            android:background="@mipmap/message"/>

    </LinearLayout>

</FrameLayout>