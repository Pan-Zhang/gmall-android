<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <com.guotai.mall.widget.ProductPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/head_pager"/>

    <com.guotai.mall.widget.ViewPagerIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/head_pager"
        android:layout_marginBottom="5dp"
        android:id="@+id/indicator"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_below="@id/head_pager"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/home_line"/>

    </RelativeLayout>

</RelativeLayout>